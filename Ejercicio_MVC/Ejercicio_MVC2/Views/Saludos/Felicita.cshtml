@{
    ViewData["Title"] = "Página Despedida";
}

<h1>Hoy el usuario con ID: @ViewBag.id cumple @ViewBag.edad años</h1>
<ul>
    @for (int i = 0; i < ViewBag.edad; i++)
    {
        <li><a asp-controller="Saludos" asp-action="Index">Felicidades @ViewBag.nombre</a></li>
    }
</ul>